<h1>Admin::Homes#top</h1>
<!--管理者：トップページ(注文一覧画面)-->
<div class="container">
  <h2>注文履歴一覧</h2>
  
  <table class="order-content">
    <thead>
      <tr>
        <td>購入日時</td>
        <td>購入者</td>
        <td>注文個数</td>
        <td>注文ステータス</td>
      </tr>
    </thead>
    
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>