<h1>Admin::Genres#index</h1>
<!--管理者：ジャンル管理画面(一覧・追加を兼ねる)-->

<div class="container">
  <h4>ジャンル一覧・追加</h4>

  <div class="genre-content">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%= f.label 'ジャンル名' %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit '新規登録' %>
    <% end %>
  </div>

  <table class="genre-list">
    <thead>ジャンル</thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>