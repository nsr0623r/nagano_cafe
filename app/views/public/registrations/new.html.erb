<!--顧客用ログイン画面-->
<h2>新規会員登録</h2>

<%= form_with model: @customer do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="name">
      <span>名前</span>
      <%= f.label :first_name, "(姓)" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      <%= f.label :last_name, "(名)" %>
      <%= f.text_field :last_name, autocomplete: "last_name" %>
    </div>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <%= f.label :first_name_kana, "(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    <%= f.label :last_name_kana, "(メイ)" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label 'メールアドレス' %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label '住所' %>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label '電話番号(ハイフンなし)' %>
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(6文字以上)' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(確認用)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<span>
  <%= link_to "こちら", new_customer_session_path %>
  からログインしてください。
</span>

