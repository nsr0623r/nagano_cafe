<h1>Public::Customers#show</h1>
<!--顧客：顧客のマイページ-->
<div class="container">
  <h2>マイページ</h2>
  
  <div class="customer-container">
    <div class="title">
      登録情報
      <%= link_to '編集する', edit_customers_path %>
    </div>
    <div class="box">
      <p>
        氏名
        <%= @customer.first_name %><%= @customer.last_name %>
      </p>
      <p>
        カナ
        <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
      </p>
      <p>
        郵便番号
        <%= @customer.postal_code %>
      </p>
      <p>
        住所
        <%= @customer.address %>
      </p>
      <p>
        電話番号
        <%= @customer.telephone_number %>
      </p>
      <p>
        メールアドレス
        <%= @customer.email %>
      </p>
    </div>
    <div>
      <p>
        配送先
        <%= link_to '一覧を見る', address_index_path %>
      </p>
      <p>
        注文履歴
        <%= link_to '一覧を見る', orders_path %>
      </p>
    </div>
  </div>
</div>